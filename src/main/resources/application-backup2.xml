<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context
                            http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:property-placeholder location="application.properties"/>

    <context:component-scan base-package="nn.ru.spring"/>

    <bean class="nn.ru.spring.bpp.InjectBeanPostProcessor"/>
    <bean class="nn.ru.spring.bpp.TransactionBeanPostProcessor"/>
    <bean class="nn.ru.spring.bpp.AuditingBeanPostProcessor"/>

<!--    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>-->

<!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
<!--        <property name="locations" value="application.properties"/>-->
<!--    </bean>-->

<!--    ${}-->

    <bean class="nn.ru.spring.bfpp.LogBeanFactoryPostProcessor"/>
    <bean class="nn.ru.spring.bfpp.VerifyPropertyBeanFactoryPostProcessor"/>

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>

    <bean id="postgres" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>

    <bean id="pool2" class="nn.ru.spring.database.pool.ConnectionPool"/>
    <bean id="pool1" name="p1,p2,p3" class="nn.ru.spring.database.pool.ConnectionPool">
        <constructor-arg name="username" type="java.lang.String" ref="${db.username}"/>
        <constructor-arg name="properties" type="java.util.Map">
            <null/>
        </constructor-arg>
        <constructor-arg name="poolSize" type="java.lang.Integer" value="${db.pool.size}"/>
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
<!--        #{} -->
        <property name="properties">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="123"/>
                <entry key="driver" value="#{driver.substring(3)}"/>
                <entry key="test" value="#{driver.length() > 10}"/>
                <entry key="test1" value="#{driver.length() > T(Math).random() * 10}"/>
                <entry key="hosts" value="#{'${db.hosts}'.split(',')}"/>
                <entry key="currentUser" value="#{systemProperties['user.name']}"/>
                <entry key="currentUser" value="${user.name}"/>

            </map>
        </property>
    </bean>

    <bean id="companyRepository" class="nn.ru.spring.database.repository.CompanyRepository"/>


</beans>
